#!/usr/bin/env bash

# Remove the default Nginx configuration
rm /etc/nginx/sites-enabled/default

# Create a symbolic link to the default configuration
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Restart Nginx using systemctl
systemctl restart nginx

# Check if Nginx is now listening on port 80
if sudo netstat -tulpn | grep ":80" > /dev/null 2>&1; then
    echo "Nginx is now listening on port 80."
else
    echo "Failed to configure Nginx to listen on port 80."
fi
